<footer class='footer'>
  <div class='container'>
    <div class='row'>

      <div class='col-md-3'>
        <%= image_tag('logo.png', width: 160, height: 110) %>

        <a class='footer-logo', href='/', id='logo'>SIOHA</a>
      </div>

      <div class='col-md-4'>
        <nav>
          <ul>
            <% if signed_in? %>
              <li class='attention-footer'>Navegação</li>
              <li><%= link_to 'Sobre', '#' %></li>
              <li><%= link_to 'Ajuda', '#' %></li>
              <li><%= link_to 'Contribua!', '#' %></li>
              <li><%= link_to 'FAQ', '#' %></li>
              <li><%= link_to "#{current_user.name}", current_user %></li>
              <li><%= link_to 'Deslogar', signout_path, method: :delete %></li>
            <% else %>
              <li class='attention-footer'>Navegação</li>
              <li><%= link_to 'Sobre', '#' %></li>
              <li><%= link_to 'Ajuda', '#' %></li>
              <li><%= link_to 'Contribua!', '#' %></li>
              <li><%= link_to 'FAQ', '#' %></li>
              <li><%= link_to 'Registrar', signup_path %></li>
              <li><%= link_to 'Logar', signin_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>

      <div class="col-md-4">
        <nav>
          <ul>
            <li class='attention-footer'>Informações</li>
            <li><%= link_to 'Outros', '#' %></li>
            <li><%= link_to 'Times', '#' %></li>
            <li><%= link_to 'Estatísticas', '#' %></li>
            <li><%= link_to 'Convites', '#' %></li>
            <li><%= link_to 'Feed', '#' %></li>
            <li><%= link_to 'Sprints', '#' %></li>
            <li><%= link_to 'Backlogs', '#' %></li>
          </ul>
        </nav>
      </div>

      <div class='col-md-1'>
        <%= link_to "", 'https://twitter.com/ProjectSioha', class: "fa fa-twitter footer-twitter" %>
        <%= link_to "", 'https://www.facebook.com/projectsioha', class: "fa fa-facebook footer-facebook" %>
      </div>

    </div>
  </div>
</nav>

</footer>
