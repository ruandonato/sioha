<div class='col-md-4'>
  <% if t.picture? %>
    <%= image_tag t.picture.url, size: 40 %>
  <% else %>
    <%= image_tag t.gravatar_url, size: 40 %>
  <% end %>
</div>

<div class='col-md-6'>
  <h2><%= link_to "#{t.name}", t %></h2>
  <h4><%= t.description %></h4>
  <h3>Owner: <%= link_to "#{t.user.name}", t.user %></h3>
</div>

<div class='col-md-2'>
  <% if t.public_to_members %>
    <h3 class='glyphicon glyphicon-leaf btn-success public-team-mark'></h3>
    <h3 class='btn btn-info'><%= t.methodology %></h3>
  <% else %>
    <h3 class='glyphicon glyphicon-fire btn-danger private-team-mark'></h3>
  <% end %>
</div>
