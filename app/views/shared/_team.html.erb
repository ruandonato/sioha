<div class='team-shared-block'>
  <div class='col-md-4 teams-photo'>
    <% if t.picture? %>
      <%= image_tag t.picture.url, size: 40 %>
    <% else %>
      <%= image_tag t.gravatar_url, size: 40 %>
    <% end %>
  </div>

  <div class='col-md-4'>
    <h2><%= link_to "#{t.name}", t %></h2>
    <h4><%= t.description %></h4>
    <h3>Owner: <%= link_to "#{t.user.name}", t.user %></h3>
  </div>

  <div class='col-md-4'>
    <% if t.public_to_members %>
      <h3 class='team-public'>Aberto</h3>
    <% else %>
      <h3 class='team-private'>Privado</h3>
    <% end %>
    <% if t.methodology == "Scrum" %>
      <h3 class='methodology-scrum'><%= t.methodology %></h3>
    <% elsif t.methodology == "SAFe" %>
      <h3 class='methodology-safe'><%= t.methodology %></h3>
    <% else %>
      <h3 class='methodology-empty'><%= "Metodologia nÃ£o definida." %></h3>
    <% end %>
  </div>
</div>
