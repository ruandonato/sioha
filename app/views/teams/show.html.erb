<div class='teams-show-page'>
  <div id="current-show">
    <nav class="navbar navbar-default">

      <ul class='nav navbar-nav'>
        <% if controller.action_name == "show" %>
          <li><%= link_to "Home", @team, class: "team-sidebar show-link-selected", id: @team.id %></li>
        <% else %>
          <li><%= link_to "Home", @team, class: "team-sidebar show-link", id: @team.id %></li>
        <% end %>

        <% if controller.action_name == "team_requirements" %>
          <li><%= link_to "Requisitos", '/teams/'+@team.id.to_s+'/team_requirements/', class: "team-sidebar requirements-link-selected", id: @team.id, remote: true %></li>
        <% else %>
          <li><%= link_to "Requisitos", '/teams/'+@team.id.to_s+'/team_requirements/', class: "team-sidebar requirements-link", id: @team.id, remote: true %></li>
        <% end %>

        <% if controller.action_name == "team_requirements" %>
          <li><%= link_to "Wiki", '/teams/'+@team.id.to_s+'/wiki', class: "team-sidebar wiki-link-selected", id: @team.id, remote: true %></li>
        <% else %>
          <li><%= link_to "Wiki", '/teams/'+@team.id.to_s+'/wiki', class: "team-sidebar wiki-link", id: @team.id, remote: true %></li>
        <% end %>
      </ul>

    </nav>
    <div class="row">
      <div class="col-md-12">
        <div class='row'>
          <%= render 'shared/team', t: @team %>
        </div>

        <% if current_user == @team.user %>
          <center><%= link_to 'Editar informações do time', edit_team_path(id: @team.id), class: 'btn btn-lg btn-info' %></center>
          <br><br><br><br><br>
          <h3>Convidar Pessoas</h3>
          <%= form_tag("/teams/#{@team.id}/invite", method: "get") do %>
            <%= text_field_tag :keyword, params[:keyword], class: "search-text-field", placeholder: "nome do usuário" %>
            <%= submit_tag "Buscar", :name => "Busca", class: "search-button" %>
          <% end %>
        <% end %>

        <br><br><br><br><br>
        <h1>Owner</h1>
        <div class='row'>
          <%= render 'shared/user', t: @team.user %>
        </div>

        <br><br>
        <h1>Membros (<%= @members.count %>)</h1>
        <% @members.each do |m| %>
          <div class='row'>
            <%= render 'shared/user', t: m %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
