<div class='teams-show-page'>
  <div class='row'>
    <%= render 'shared/team', t: @team %>
  </div>

  <% if current_user == @team.user %>
    <h1>Convidar Pessoas</h1>
    <%= form_tag("/teams/#{@team.id}/invite", method: "get") do %>
      <%= text_field_tag :keyword, params[:keyword], class: "search-text-field", placeholder: "nome do usuário" %>
      <%= submit_tag "Buscar", :name => "Busca", class: "search-button" %>
    <% end %>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <td>Nome</td>
        <td>E-mail</td>
        <td>Ação</td>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= link_to "#{u.name}", u %></td>
          <td><%= link_to "#{u.email}", u %></td>
          <% if u.member_of?(@team) || @team.user == u %>
            <td><h4>Já é Membro</h4></td>
          <% else %>
            <td><%= link_to " ", invite_member_path(user_id: u.id, id: @team.id), class: "btn btn-info glyphicon glyphicon-ok" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

